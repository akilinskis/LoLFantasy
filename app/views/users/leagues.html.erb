<h1>My Leagues</h1>

<ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Leagues', leagues_path %></li>
    <% if logged_in? %>
        <li><%= link_to 'My Leagues', my_leagues_path %></li>
    <% end %>
</ul>

<table>
    <thead>
    <tr>
        <th>League</th>
        <th>Team</th>
    </tr>
    </thead>

    <tbody>
    <% @teams.each do |team| %>
        <tr>
            <td><%= link_to team.league.name, team.league %></td>
            <td><%= link_to team.name, team %></td>
        </tr>
    <% end %>
    </tbody>
</table>