<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Handle</th>
      <th>Owner</th>
      <th>League</th>
      <th>Starting Top</th>
      <th>Starting Jungle</th>
      <th>Starting Mid</th>
      <th>Starting AD Carry</th>
      <th>Starting Support</th>
      <th>Locked</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.handle %></td>
        <td><%= link_to team.owner.name, team.owner %></td>
        <td><%= link_to team.league.name, team.league %></td>
        <td><%= link_to "#{team.starting_top.pro_team.handle} #{team.starting_top.name}", team.starting_top %></td>
        <td><%= link_to "#{team.starting_jungle.pro_team.handle} #{team.starting_jungle.name}", team.starting_jungle %></td>
        <td><%= link_to "#{team.starting_mid.pro_team.handle} #{team.starting_mid.name}", team.starting_mid %></td>
        <td><%= link_to "#{team.starting_ad_carry.pro_team.handle} #{team.starting_ad_carry.name}", team.starting_ad_carry %></td>
        <td><%= link_to "#{team.starting_support.pro_team.handle} #{team.starting_support.name}", team.starting_support %></td>
        <td><%= team.locked %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

